    <!-- Notification Center -->
    <div class="notification-center" id="notificationCenter"></div>

    <script>
        // Global variables
        let currentPage = 'dashboard';
        let products = [];

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeAdmin();
            loadDashboardData();
            updateClock();
            setInterval(updateClock, 1000);
        });

        function initializeAdmin() {
            // Menu toggle
            document.getElementById('menuToggle').addEventListener('click', function() {
                const sidebar = document.getElementById('sidebar');
                const mainContent = document.getElementById('mainContent');

                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');
            });

            // Navigation
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function(e) {
                    if (this.getAttribute('href') === '#') {
                        e.preventDefault();
                        const page = this.dataset.page;
                        if (page) {
                            loadPage(page);
                        }
                    }
                });
            });

            // Load products
            loadProducts();
        }

        async function loadProducts() {
            try {
                const response = await fetch('database.php?action=get_products');
                products = await response.json();
                updateStats();
            } catch (error) {
                console.error('Error loading products:', error);
            }
        }

        function loadDashboardData() {
            // Simulate loading data
            updateStats();
        }

        function updateStats() {
            document.getElementById('totalProducts').textContent = products.length;
            document.getElementById('totalOrders').textContent = Math.floor(Math.random() * 200) + 50;
            document.getElementById('totalRevenue').textContent = (Math.floor(Math.random() * 500000) + 100000).toLocaleString() + '₽';
            document.getElementById('activeUsers').textContent = Math.floor(Math.random() * 50) + 5;
        }

        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleString('ru-RU');
            document.getElementById('currentTime').textContent = timeString;
        }

        async function loadPage(pageName) {
            // Update active nav
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.dataset.page === pageName) {
                    item.classList.add('active');
                }
            });

            // Show loading
            const pageElement = document.getElementById(pageName);
            if (!pageElement) return;

            // Hide all pages
            document.querySelectorAll('.admin-page').forEach(page => {
                page.classList.remove('active');
            });

            // Load page content if not loaded
            if (pageElement.innerHTML.trim() === '') {
                pageElement.innerHTML = '<div style="text-align: center; padding: 4rem;"><i class="fas fa-spinner fa-spin" style="font-size: 3rem; color: var(--primary-green);"></i><br><br>Загрузка...</div>';

                try {
                    const response = await fetch(`admin_pages/${pageName}.php`);
                    const content = await response.text();
                    pageElement.innerHTML = content;

                    // Execute any scripts in the loaded content
                    const scripts = pageElement.querySelectorAll('script');
                    scripts.forEach(script => {
                        eval(script.textContent);
                    });

                } catch (error) {
                    console.error('Error loading page:', error);
                    pageElement.innerHTML = `
                        <div style="text-align: center; padding: 4rem; color: #f44336;">
                            <i class="fas fa-exclamation-triangle" style="font-size: 3rem;"></i><br><br>
                            Ошибка загрузки страницы
                        </div>`;
                }
            }

            // Show page
            pageElement.classList.add('active');
            currentPage = pageName;
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}" style="color: var(--primary-green);"></i>
                    <div style="flex: 1;">${message}</div>
                    <button onclick="this.parentElement.parentElement.remove()" style="background: none; border: none; color: #999; cursor: pointer;">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;

            document.getElementById('notificationCenter').appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 5000);
        }

        // Quick Actions
        function quickCreateProduct() {
            loadPage('mega-creator');
        }

        function exportData() {
            showNotification('Экспорт данных начат...', 'info');
            // Simulate export
            setTimeout(() => {
                showNotification('Данные экспортированы успешно!', 'success');
            }, 2000);
        }

        function importData() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.csv,.xlsx,.json';
            input.onchange = function() {
                showNotification('Импорт данных начат...', 'info');
                setTimeout(() => {
                    showNotification('Данные импортированы успешно!', 'success');
                }, 3000);
            };
            input.click();
        }

        function clearCache() {
            showNotification('Кэш очищается...', 'info');
            setTimeout(() => {
                showNotification('Кэш очищен успешно!', 'success');
            }, 1500);
        }

        function backupSite() {
            showNotification('Создание резервной копии...', 'info');
            setTimeout(() => {
                showNotification('Резервная копия создана успешно!', 'success');
            }, 3000);
        }

        function optimizeSEO() {
            showNotification('SEO оптимизация запущена...', 'info');
            setTimeout(() => {
                showNotification('SEO оптимизация завершена!', 'success');
            }, 4000);
        }

        function showBackup() {
            if (confirm('Создать резервную копию всех данных?')) {
                backupSite();
            }
        }

        // Mobile responsiveness
        if (window.innerWidth <= 768) {
            document.getElementById('sidebar').classList.add('collapsed');
            document.getElementById('mainContent').classList.add('expanded');
        }
    </script>
</body>
</html>
