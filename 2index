    <!-- Scripts -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Initialize Swiper
        const swiper = new Swiper('.hero-slider .swiper', {
            loop: true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            effect: 'slide',
            speed: 800,
        });

        // Global functions
        function performSearch(e) {
            e.preventDefault();
            const query = document.getElementById('searchInput').value.trim();
            if (query) {
                window.location.href = `/search?q=${encodeURIComponent(query)}`;
            }
        }

        function openAISearch() {
            const query = document.getElementById('searchInput').value.trim();
            if (query) {
                openAIChat();
                showNotification('ИИ анализирует ваш запрос...', 'info');
            } else {
                openAIChat();
            }
        }

        function addToCart(productId) {
            const button = event.target;
            const originalText = button.innerHTML;

            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Добавляем...';
            button.disabled = true;

            fetch('/api_cart.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `action=add&product_id=${productId}&quantity=1`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateCartCount();
                    showNotification('Товар добавлен в корзину!', 'success');
                    button.innerHTML = '<i class="fas fa-check"></i> Добавлено';
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 2000);
                } else {
                    showNotification('Ошибка при добавлении товара', 'error');
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            })
            .catch(error => {
                showNotification('Ошибка соединения', 'error');
                button.innerHTML = originalText;
                button.disabled = false;
            });
        }

        function toggleFavorite(productId) {
            const button = event.target.closest('.action-btn');
            const icon = button.querySelector('i');

            fetch('/api_favorites.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `action=toggle&product_id=${productId}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const isAdded = data.action === 'added';
                    icon.className = isAdded ? 'fas fa-heart' : 'far fa-heart';
                    button.classList.toggle('active', isAdded);
                    showNotification(data.message, 'success');
                }
            })
            .catch(error => {
                showNotification('Ошибка соединения', 'error');
            });
        }

        function quickView(productId) {
            showNotification('Быстрый просмотр скоро будет доступен!', 'info');
        }

        function toggleCart() {
            const overlay = document.getElementById('cartOverlay');
            const sidebar = document.getElementById('cartSidebar');

            const isOpen = overlay.classList.contains('show');

            if (isOpen) {
                overlay.classList.remove('show');
                sidebar.classList.remove('show');
            } else {
                overlay.classList.add('show');
                sidebar.classList.add('show');
                loadCartItems();
            }
        }

        function loadCartItems() {
            const content = document.getElementById('cartContent');
            content.innerHTML = '<div class="loading"><i class="fas fa-spinner fa-spin"></i> Загрузка...</div>';

            fetch('/api_cart.php')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        renderCartItems(data.cart);
                        updateCartTotal(data.cart.total || 0);
                    } else {
                        content.innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-circle"></i><h3>Ошибка загрузки</h3></div>';
                    }
                })
                .catch(error => {
                    content.innerHTML = '<div class="empty-state"><i class="fas fa-wifi"></i><h3>Ошибка соединения</h3></div>';
                });
        }

        function renderCartItems(cart) {
            const content = document.getElementById('cartContent');

            if (!cart.items || cart.items.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-shopping-cart"></i>
                        <h3>Корзина пуста</h3>
                        <p>Добавьте товары из каталога</p>
                    </div>
                `;
                return;
            }

            let html = '<div class="cart-items">';
            cart.items.forEach(item => {
                html += `
                    <div class="cart-item" style="display: flex; gap: 12px; padding: 16px 0; border-bottom: 1px solid var(--gray-200);">
                        <div style="width: 60px; height: 60px; border-radius: var(--radius); background: var(--gray-100); display: flex; align-items: center; justify-content: center; overflow: hidden;">
                            ${item.image && item.image !== '' ? 
                                `<img src="${item.image}" alt="${item.name}" style="width: 100%; height: 100%; object-fit: cover;">` : 
                                '<i class="fas fa-image" style="color: var(--gray-400);"></i>'
                            }
                        </div>
                        <div style="flex: 1;">
                            <div style="font-weight: 500; margin-bottom: 4px; font-size: 14px;">${item.name}</div>
                            <div style="color: var(--primary-color); font-weight: 600;">${formatPrice(item.price)}</div>
                            <div style="display: flex; align-items: center; gap: 8px; margin-top: 8px;">
                                <button onclick="updateCartQuantity('${item.id}', ${item.quantity - 1})" 
                                        style="width: 24px; height: 24px; border: 1px solid var(--gray-300); background: white; border-radius: 4px; cursor: pointer; display: flex; align-items: center; justify-content: center;">-</button>
                                <span style="min-width: 20px; text-align: center; font-weight: 500;">${item.quantity}</span>
                                <button onclick="updateCartQuantity('${item.id}', ${item.quantity + 1})" 
                                        style="width: 24px; height: 24px; border: 1px solid var(--gray-300); background: white; border-radius: 4px; cursor: pointer; display: flex; align-items: center; justify-content: center;">+</button>
                            </div>
                        </div>
                        <button onclick="removeFromCart('${item.id}')" 
                                style="color: var(--gray-400); border: none; background: none; cursor: pointer; padding: 4px;" 
                                title="Удалить">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
            });
            html += '</div>';

            content.innerHTML = html;
        }

        function updateCartCount() {
            fetch('/api_cart.php')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.cart) {
                        const count = data.cart.count || 0;
                        const countEl = document.getElementById('cartCount');

                        if (count > 0) {
                            countEl.textContent = count;
                            countEl.style.display = 'flex';
                        } else {
                            countEl.style.display = 'none';
                        }
                    }
                });
        }

        function updateCartTotal(total) {
            document.getElementById('cartTotal').textContent = `Итого: ${formatPrice(total)}`;
        }

        function updateCartQuantity(productId, quantity) {
            if (quantity < 1) {
                removeFromCart(productId);
                return;
            }

            fetch('/api_cart.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `action=update&product_id=${productId}&quantity=${quantity}`
            })
            .then(() => loadCartItems());
        }

        function removeFromCart(productId) {
            fetch('/api_cart.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `action=remove&product_id=${productId}`
            })
            .then(() => {
                loadCartItems();
                updateCartCount();
            });
        }

        function formatPrice(price) {
            return new Intl.NumberFormat('ru-RU', {
                style: 'currency',
                currency: 'RUB',
                minimumFractionDigits: 0
            }).format(price || 0);
        }

        function openAIChat() {
            showNotification('ИИ консультант скоро будет доступен!', 'info');
        }

        function goToCheckout() {
            window.location.href = '/checkout';
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check' : type === 'error' ? 'fa-exclamation-circle' : type === 'warning' ? 'fa-exclamation-circle' : 'fa-info-circle'}"></i>
                ${message}
            `;

            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 АкваСбор загружен (интегрированная версия)');
            updateCartCount();

            // Show AI notification
            setTimeout(() => {
                const notification = document.getElementById('aiNotification');
                if (notification) {
                    notification.style.display = 'flex';
                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 5000);
                }
            }, 3000);
        });
    </script>

    <!-- Custom JS from admin panel -->
    <?php if (!empty($settings['custom_js'])): ?>
    <script>
    <?php echo $settings['custom_js']; ?>
    </script>
    <?php endif; ?>
</body>
</html>

<?php
// Вспомогательная функция для изменения яркости цвета
function adjustBrightness($hex, $percent) {
    $hex = ltrim($hex, '#');

    if (strlen($hex) === 3) {
        $hex = str_repeat(substr($hex,0,1), 2).str_repeat(substr($hex,1,1), 2).str_repeat(substr($hex,2,1), 2);
    }

    $dec = hexdec($hex);
    $rgb = [
        ($dec >> 16) & 0xff,
        ($dec >> 8) & 0xff,
        $dec & 0xff
    ];

    foreach ($rgb as &$color) {
        $color = max(0, min(255, $color + $percent * 255 / 100));
    }

    return sprintf("#%02x%02x%02x", $rgb[0], $rgb[1], $rgb[2]);
}
?>
