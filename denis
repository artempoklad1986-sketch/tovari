                <?php endforeach; ?>
              </div>
            </div>
            <div class="fav" data-id="<?= htmlspecialchars((string)$prod['id']) ?>" onclick="toggleFav('<?= htmlspecialchars((string)$prod['id']) ?>', this)">â¤</div>
